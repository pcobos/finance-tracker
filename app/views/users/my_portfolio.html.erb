<h1>My Portfolio</h1>
<p>Make money money money, make money money money...</p>

<div class="search-form">
  <h3>Search stocks</h3>
  <%= form_tag '#', method: :get do %>
    <div class="form-group row">
      <div class="col-6">
        <%= text_field_tag :stock, params[:stock], placeholder:"Ticker Symbol", autofocus: true, class: "form-control form-control-lg" %>
      </div>
      <div class="col-3">
        <%= button_tag type: :submit, class: "btn btn-success btn-lg" do %>
          <%= fa_icon 'search' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>